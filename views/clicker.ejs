<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Clicker</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto:300' rel='stylesheet' type='text/css'>
    <style>
      html, body {
        width: 100%;
        height: 100%;
        padding: 0px;
        margin: 0px;
      }
      .container {
        width: 100%;
      }
      .circle {
        display: block;
        margin: auto;
        overflow: none;
        background: #111;
      }
      .text {
        color: #eee;
        text-align: center;
        font-family: 'Roboto', Tahoma, sans-serif;
      }
    </style>
    <script src="https://code.jquery.com/jquery-3.1.0.min.js" integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=" crossorigin="anonymous"></script>
    <script>

      function initUI () {
        var width = Math.min($(window).width(), $(window).height()) * .8;

        $('.circle').css({
          height: width,
          width: width,
          borderRadius: width / 2
        });

        $('.container').css({
          paddingTop: ($(window).height() - width) / 2
        });

        $('.text').css({
          fontSize : width * .3,
          paddingTop : (width * .6) / 2
        })
      }

      $(function() {

        $(window).resize(initUI);
        initUI();

        console.log($(window).width());
      });
    </script>
  </head>
  <body>
    <div class="container">
      <div class="circle">
        <div class="text">WAIT</div>
      </div>
    </div>

    <% if(production) { %>
      <script id="__bs_script__">
      //<![CDATA[
      document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.2.14.0.js'><\/script>".replace("HOST", location.hostname));
      //]]>
      </script>
    <% } %>
  </body>
</html>
